<div class="first-section">
  <div class="first-section-content">

    <%= image_tag "logo.png", id:"logo"%>
    <% if params[:locale].nil? %>
    <%= render "shared/dropdown_default" %>
    <% else %>
    <%= render "shared/dropdown_choice" %>
    <% end %>

    <div class="first-section-text" data-aos="fade-right" data-aos-duration="2000">
      <h1>
        <%=t(:your)%> <span style="font-weight:500;"><%=t(:role)%> </span> <%=t(:smartphone)%>
